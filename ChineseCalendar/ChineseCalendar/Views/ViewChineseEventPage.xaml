<Page x:Class="ChineseCalendar.Views.ViewChineseEventPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChineseCalendar.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewChineseEventPage"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Label x:Name="ViewEventsHeadingLabel" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="0,32,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="24" Content="Calendar Events"/>
        <Button x:Name="BackButton" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Back" Click="BackButton_Click"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1" BorderThickness="3" BorderBrush="Black">
                <Grid x:Name="EventsListGrid">
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Row="2" Margin="0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="AddEventButton" Grid.Column="1" Margin="8" Content="Add Event" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" FontWeight="SemiBold" Padding="10" Click="AddEventButton_Click"/>
            <Button x:Name="RemoveEventButton" Grid.Column="3" Margin="8" Content="Remove Event" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" FontWeight="SemiBold" Padding="10" Click="RemoveEventButton_Click"/>
        </Grid>
    </Grid>
</Page>
